@page "/usersRazorPage"
@model UserTableManagment.Pages.UsersModel

@{
    Layout = "_Layout";
    <h1>Users</h1>
    <table class="table table-light table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col" class="col-md-2">User ID</th>
                <th scope="col">Full Name</th>
                <th scope="col">E-mail</th>
                <th scope="col">Registration Date</th>
                <th scope="col">Last Log In</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 1; i <= Model.Users.Count; i++)
            {
                var user = Model.Users[i - 1];
                <tr>
                    <th scope="row">@i</th>
                    <td><small class="text-secondary">@user.Id</small></td>
                    <td>@user.UserFullName</td>
                    <td>@user.Email</td>
                    <td>@user.Registration</td>
                    <td>@user.LastLogin</td>
                    <td>@user.IsActive</td>
                </tr>
            }
        </tbody>
    </table>
}
